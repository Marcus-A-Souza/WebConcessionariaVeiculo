@using WebConcessionariasVeiculos.Models

@model Veiculo

@{
    ViewData["Title"] = "Cadastrar Veículo";
}

<h2>Cadastrar Veículo</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Modelo"></label>
        <input asp-for="Modelo" class="form-control" required />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AnoFabricacao"></label>
        <input asp-for="AnoFabricacao" type="number" class="form-control" required />
        <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoVeiculo>()"></select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FabricanteId">Fabricante</label>
        <select asp-for="FabricanteId" class="form-control" asp-items="ViewBag.Fabricantes"></select>
        <span asp-validation-for="FabricanteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<p><a asp-action="Index">Voltar à lista</a></p>