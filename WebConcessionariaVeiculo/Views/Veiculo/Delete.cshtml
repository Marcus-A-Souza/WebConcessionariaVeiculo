@using WebConcessionariasVeiculos.Models
@model Veiculo

@{
    ViewData["Title"] = "Excluir Veículo";
}

<h2>Excluir Veículo</h2>

<h3>Tem certeza de que deseja excluir este veículo?</h3>
<div>
    <h4>@Model.Modelo</h4>
    <p><strong>Ano de Fabricação:</strong> @Model.AnoFabricacao</p>
    <p><strong>Preço:</strong> @Model.Preco.ToString("C")</p>
    <p><strong>Tipo:</strong> @Model.Tipo</p>
    <p><strong>Fabricante:</strong> @Model.Fabricante.Nome</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

