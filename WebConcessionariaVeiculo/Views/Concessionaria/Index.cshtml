@using WebConcessionariasVeiculos.Models
@model IEnumerable<Concessionaria>

@{
    ViewData["Title"] = "Lista de Concessionárias";
}

<h2>Lista de Concessionárias</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Nova Concessionária</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Capacidade Máxima</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Endereco, @item.Cidade - @item.Estado, @item.CEP</td>
                <td>@item.Telefone</td>
                <td>@item.Email</td>
                <td>@item.CapacidadeMaxima</td>
                  
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
</p>