@using WebConcessionariasVeiculos.Models
@model Concessionaria

@{
    ViewData["Title"] = "Excluir Concessionária";
}

<h2>Excluir Concessionária</h2>

<h3>Tem certeza de que deseja excluir esta concessionária?</h3>
<div>
    <h4>@Model.Nome</h4>
    <p><strong>Endereço:</strong> @Model.Endereco, @Model.Cidade - @Model.Estado, @Model.CEP</p>
    <p><strong>Telefone:</strong> @Model.Telefone</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Capacidade Máxima:</strong> @Model.CapacidadeMaxima</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

