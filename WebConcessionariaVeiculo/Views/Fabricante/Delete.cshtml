@using WebConcessionariasVeiculos.Models
@model Fabricante

@{
    ViewData["Title"] = "Excluir Fabricante";
}

<h2>Excluir Fabricante</h2>

<h3>Tem certeza de que deseja excluir este fabricante?</h3>
<div>
    <h4>@Model.Nome</h4>
    <p><strong>País de Origem:</strong> @Model.PaisOrigem</p>
    <p><strong>Ano de Fundação:</strong> @Model.AnoFundacao</p>
    <p><strong>Website:</strong> <a href="@Model.Website" target="_blank">@Model.Website</a></p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

