@using WebConcessionariasVeiculos.Models
@model Fabricante

@{
    ViewData["Title"] = "Editar Fabricante";
}

<h2>Editar Fabricante</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaisOrigem"></label>
        <input asp-for="PaisOrigem" class="form-control" />
        <span asp-validation-for="PaisOrigem" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AnoFundacao"></label>
        <input asp-for="AnoFundacao" class="form-control" type="number" />
        <span asp-validation-for="AnoFundacao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Website"></label>
        <input asp-for="Website" class="form-control" type="url" />
        <span asp-validation-for="Website" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar Alterações" class="btn btn-success" />
    </div>
</form>

<p>
    <a asp-action="Index">Voltar à Lista</a>
</p>

