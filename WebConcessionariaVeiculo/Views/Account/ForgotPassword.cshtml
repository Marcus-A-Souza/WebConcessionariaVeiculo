@model WebConcessionariasVeiculos.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Recuperar Senha";
}

<link rel="stylesheet" href="/css/site_styles.css">

<div class="container">
    <h2 class="text-center">Recuperar Senha</h2>

    <form asp-action="ForgotPassword" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Enviar link de recuperação" class="btn btn-primary w-100" />
        </div>
    </form>

    <p class="text-center mt-3">
        <a asp-action="Login">Voltar para login</a>
    </p>
</div>
