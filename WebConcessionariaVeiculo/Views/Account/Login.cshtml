@using WebConcessionariasVeiculos.Models.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    /* Centraliza o login na tela */
    .login-container {
        max-width: 350px; /* Reduzi o tamanho */
        margin: 80px auto; /* Centraliza verticalmente */
        background: #d6d6d6; /* Fundo cinza */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    h2 {
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        width: 100%;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .text-center a {
        color: #007bff;
        text-decoration: none;
    }

    .text-center a:hover {
        text-decoration: underline;
    }
</style>

<div class="container">
    <div class="login-container">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                <label class="form-check-label" asp-for="RememberMe">Lembrar-me</label>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Entrar" class="btn btn-primary" />
            </div>
        </form>

        <p class="text-center mt-3">
            <a asp-action="Register">Criar uma conta</a> |
            <a asp-action="ForgotPassword">Esqueceu a senha?</a>
        </p>
    </div>
</div>
