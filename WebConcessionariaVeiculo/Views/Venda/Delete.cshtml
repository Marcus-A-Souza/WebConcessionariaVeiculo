@using WebConcessionariasVeiculos.Models
@model Venda

@{
    ViewData["Title"] = "Excluir Venda";
}

<h2>Excluir Venda</h2>

<h3>Tem certeza de que deseja excluir esta venda?</h3>
<div>
    <h4>Informações do Cliente</h4>
    <p><strong>Nome:</strong> @Model.NomeCliente</p>
    <p><strong>CPF:</strong> @Model.CPF</p>
    <p><strong>Telefone:</strong> @Model.Telefone</p>
</div>

<div>
    <h4>Informações do Veículo</h4>
    <p><strong>Modelo:</strong> @Model.Veiculo.Modelo</p>
    <p><strong>Fabricante:</strong> @Model.Veiculo.Fabricante.Nome</p>
    <p><strong>Preço de Venda:</strong> @Model.PrecoVenda.ToString("C")</p>
    <p><strong>Data da Venda:</strong> @Model.DataVenda.ToShortDateString()</p>
    <p><strong>Número do Protocolo:</strong> @Model.NumeroProtocolo</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
