@using WebConcessionariasVeiculos.Models
@model Venda

@{
    ViewData["Title"] = "Registrar Nova Venda";
}

<h2>Registrar Nova Venda</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NomeCliente"></label>
        <input asp-for="NomeCliente" class="form-control" required />
        <span asp-validation-for="NomeCliente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CPF"></label>
        <input asp-for="CPF" class="form-control" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" placeholder="000.000.000-00" required />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" placeholder="(XX) XXXXX-XXXX" required />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConcessionariaId"></label>
        <select asp-for="ConcessionariaId" asp-items="ViewBag.Concessionarias" class="form-control">
            <option value="">Selecione a Concessionária</option>
        </select>
        <span asp-validation-for="ConcessionariaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FabricanteId"></label>
        <select asp-for="FabricanteId" asp-items="ViewBag.Fabricantes" class="form-control">
            <option value="">Selecione o Fabricante</option>
        </select>
        <span asp-validation-for="FabricanteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VeiculoId"></label>
        <select asp-for="VeiculoId" asp-items="ViewBag.Veiculos" class="form-control">
            <option value="">Selecione o Veículo</option>
        </select>
        <span asp-validation-for="VeiculoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecoVenda"></label>
        <input asp-for="PrecoVenda" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="PrecoVenda" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataVenda"></label>
        <input asp-for="DataVenda" type="date" class="form-control" required />
        <span asp-validation-for="DataVenda" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Registrar Venda" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
</p>
